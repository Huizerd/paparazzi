    <!--        <waypoint lat="51.9906465" lon="4.3767025" name="_CZ2"/>-->
    <!--        <waypoint lat="51.9906882" lon="4.376805" name="_CZ3"/>-->
    <!--        <waypoint lat="51.9906238" lon="4.3768729" name="_CZ4"/>-->
