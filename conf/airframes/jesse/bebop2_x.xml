<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<airframe name="bebop2_x">

    <!--
        Experimental airframe
        I think most of our problems have to do with the INS and acceleration:
         - Whether or not to use it
         - Which variant
         - How much filtering and in which directions
         - What sensors to include
         - We just want the most accurate measure of acceleration possible

        Additionally, maybe we can use INDI guidance like Rohan does

        Changes in this file:
         - New drone (C4D#2)
         - New accelerometer calibration
         - IMU temp control
         - Sonar range
    -->
    <!--
        TODO:
        - Move magnetometer
        - Move sonar
        - Move ahrs
        - Define vs configure
        - When in firmware, when outside?
    -->
    <firmware name="rotorcraft">
        <!-- Autopilot -->
        <target name="ap" board="bebop2">
            <module name="stabilization" type="indi_simple"/>

            <define name="FILE_LOGGER_PATH" value="/data/ftp/internal_000/logs"/>
            <define name="VIDEO_CAPTURE_PATH" value="/data/ftp/internal_000/videos"/>
        </target>

        <!-- Simulation -->
        <target name="nps" board="pc">
            <module name="fdm" type="gazebo"/>
            <module name="stabilization" type="int_quat"/>

            <define name="FILE_LOGGER_PATH" value="/tmp/paparazzi/logs"/>
            <define name="VIDEO_CAPTURE_PATH" value="/tmp/paparazzi/videos"/>
        </target>

        <!-- Subsystems -->
        <module name="telemetry" type="transparent_udp"/>
        <module name="radio_control" type="datalink"/>
        <module name="motor_mixing"/>
        <module name="actuators" type="bebop"/>
        <module name="imu" type="bebop"/>
        <module name="gps" type="datalink"/>
        <module name="ahrs" type="int_cmpl_quat">
            <define name="AHRS_GRAVITY_HEURISTIC_FACTOR" value="0"/>
            <configure name="USE_MAGNETOMETER" value="FALSE"/>
            <define name="AHRS_USE_GPS_HEADING" value="TRUE"/>
            <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="0.0"/>
        </module>
        <module name="ins" type="extended"/>
        <!-- Sonar is used by ins extended (which is an extended KF) -->
        <define name="USE_SONAR"/>

        <!-- IMU temperature control -->
        <module name="imu_temp_ctrl">
            <define name="IMU_TEMP_CTRL_DEBUG"/>
        </module>

        <!-- Logging of CSV files -->
        <module name="logger_file"/>

        <!-- Some module for camera settings? -->
        <module name="bebop_cam"/>

        <!-- For internal use of video in modules -->
        <!-- <module name="video_thread">
            <define name="MT9V117_TARGET_FPS" value="45"/>
        </module> -->

        <!-- Needed for optic flow computation -->
        <module name="pose_history"/>

        <module name="cv_opticflow">
            <define name="OPTICFLOW_METHOD" value="0"/>
            <define name="OPTICFLOW_MEDIAN_FILTER" value="TRUE"/>
            <define name="OPTICFLOW_CAMERA" value="bottom_camera"/>
            <define name="OPTICFLOW_SHOW_FLOW" value="TRUE"/>
        </module>

        <!-- Logging of JPEG images -->
        <module name="video_capture">
            <define name="VIDEO_CAPTURE_CAMERA" value="bottom_camera"/>
            <define name="VIDEO_CAPTURE_FPS" value="0"/>
            <define name="VIDEO_CAPTURE_JPEG_QUALITY" value="99"/>
        </module>

        <module name="spiking_landing"/>
        <module name="uart_driver"/>

        <!-- For streaming video to e.g. VLC -->
        <!-- <module name="video_rtp_stream">
            <define name="VIEWVIDEO_CAMERA" value="bottom_camera"/>
            <define name="VIEWVIDEO_DOWNSIZE_FACTOR" value="1"/>
            <define name="VIEWVIDEO_QUALITY_FACTOR" value="99"/>
            <define name="VIEWVIDEO_FPS" value="30"/>
        </module> -->

    </firmware>

    <commands>
        <axis name="PITCH" failsafe_value="0"/>
        <axis name="ROLL" failsafe_value="0"/>
        <axis name="YAW" failsafe_value="0"/>
        <!-- Thrust value in case OptiTrack is lost -->
        <!-- Without any load: nominal thrust = 0.56, here do 0.46 * PPRZ_MAX (PPRZ_MAX = 9600) = 4416 -->
        <!-- With upboard + mount: nominal thrust = 0.76, so 0.66 * 9600 = 6336 -->
        <!-- With powerbank setup: nominal thrust = 0.79, so 0.69 * 9600 = 6624 -->
        <axis name="THRUST" failsafe_value="4416"/>
    </commands>

    <servos driver="Default">
        <servo name="TOP_LEFT" no="0" min="2500" neutral="2500" max="12000"/>
        <servo name="TOP_RIGHT" no="1" min="2500" neutral="2500" max="12000"/>
        <servo name="BOTTOM_RIGHT" no="2" min="2500" neutral="2500" max="12000"/>
        <servo name="BOTTOM_LEFT" no="3" min="2500" neutral="2500" max="12000"/>
    </servos>

    <section name="MIXING" prefix="MOTOR_MIXING_">
        <define name="TRIM_ROLL" value="0"/>
        <define name="TRIM_PITCH" value="0"/>
        <define name="TRIM_YAW" value="0"/>
        <define name="REVERSE" value="TRUE"/>
        <define name="TYPE" value="QUAD_X"/>
    </section>

    <command_laws>
        <call fun="motor_mixing_run(autopilot_get_motors_on(),FALSE,values)"/>
        <set servo="TOP_LEFT" value="motor_mixing.commands[MOTOR_FRONT_LEFT]"/>
        <set servo="TOP_RIGHT" value="motor_mixing.commands[MOTOR_FRONT_RIGHT]"/>
        <set servo="BOTTOM_RIGHT" value="motor_mixing.commands[MOTOR_BACK_RIGHT]"/>
        <set servo="BOTTOM_LEFT" value="motor_mixing.commands[MOTOR_BACK_LEFT]"/>
    </command_laws>

    <section name="IMU" prefix="IMU_">
        <!-- Values calibrated for Bebop 2 (TUBB2NB2) -->
        <!-- <define name="ACCEL_X_NEUTRAL" value="47"/>
        <define name="ACCEL_Y_NEUTRAL" value="-40"/>
        <define name="ACCEL_Z_NEUTRAL" value="103"/>
        <define name="ACCEL_X_SENS" value="2.43898676936" integer="16"/>
        <define name="ACCEL_Y_SENS" value="2.44480597539" integer="16"/>
        <define name="ACCEL_Z_SENS" value="2.43914645528" integer="16"/> -->

        <!-- Values calibrated for Bebop 2 (C4D#02, good battery) -->
        <!-- <define name="ACCEL_X_NEUTRAL" value="26"/>
        <define name="ACCEL_Y_NEUTRAL" value="6"/>
        <define name="ACCEL_Z_NEUTRAL" value="-42"/>
        <define name="ACCEL_X_SENS" value="2.4519130981" integer="16"/>
        <define name="ACCEL_Y_SENS" value="2.4522942268" integer="16"/>
        <define name="ACCEL_Z_SENS" value="2.41657435522" integer="16"/> -->

        <!-- Values calibrated for Bebop 2 (C4D#02, bad battery) -->
        <!-- <define name="ACCEL_X_NEUTRAL" value="26"/>
        <define name="ACCEL_Y_NEUTRAL" value="7"/>
        <define name="ACCEL_Z_NEUTRAL" value="-39"/>
        <define name="ACCEL_X_SENS" value="2.45145512131" integer="16"/>
        <define name="ACCEL_Y_SENS" value="2.45335805695" integer="16"/>
        <define name="ACCEL_Z_SENS" value="2.4172058305" integer="16"/> -->

        <!-- Values calibrated for Bebop 2 (TUBB2NB4, good battery) -->
        <define name="ACCEL_X_NEUTRAL" value="69"/>
        <define name="ACCEL_Y_NEUTRAL" value="-6"/>
        <define name="ACCEL_Z_NEUTRAL" value="-391"/>
        <define name="ACCEL_X_SENS" value="2.43222142709" integer="16"/>
        <define name="ACCEL_Y_SENS" value="2.44735783749" integer="16"/>
        <define name="ACCEL_Z_SENS" value="2.42088334098" integer="16"/>

        <!-- Values calibrated for Bebop 2 (TUBB2NB3, good battery) -->
        <!-- <define name="ACCEL_X_NEUTRAL" value="11"/>
        <define name="ACCEL_Y_NEUTRAL" value="14"/>
        <define name="ACCEL_Z_NEUTRAL" value="166"/>
        <define name="ACCEL_X_SENS" value="2.43464647981" integer="16"/>
        <define name="ACCEL_Y_SENS" value="2.45801926814" integer="16"/>
        <define name="ACCEL_Z_SENS" value="2.42864227115" integer="16"/> -->

        <define name="BODY_TO_IMU_PHI" value="0." unit="deg"/>
        <define name="BODY_TO_IMU_THETA" value="0." unit="deg"/>
        <define name="BODY_TO_IMU_PSI" value="0." unit="deg"/>
    </section>

    <section name="INS" prefix="INS_">
        <define name="USE_GPS_ALT" value="1"/>
        <define name="USE_GPS_ALT_SPEED" value="1"/>
        <!-- trust GPS a lot: -->
        <define name="VFF_R_GPS" value="0.00001"/>
        <define name="VFF_VZ_R_GPS" value="0.00001"/>
        <define name="SONAR_MIN_RANGE" value="0.0"/>
        <define name="SONAR_MAX_RANGE" value="2.2"/>
        <define name="SONAR_UPDATE_ON_AGL" value="FALSE"/>
    </section>

    <section name="RC_SETPOINT" prefix="STABILIZATION_ATTITUDE_">
        <!-- setpoint limits for attitude stabilization rc flight -->
        <define name="SP_MAX_PHI" value="45" unit="deg"/>
        <define name="SP_MAX_THETA" value="45" unit="deg"/>
        <!-- Max R setpoint: 300 gives big oscillations, 120 is perfect -->
        <define name="SP_MAX_R" value="120" unit="deg/s"/>
        <define name="DEADBAND_A" value="0"/>
        <define name="DEADBAND_E" value="0"/>
        <define name="DEADBAND_R" value="50"/>
    </section>

    <section name="ATTITUDE_REFERENCE" prefix="STABILIZATION_ATTITUDE_">
        <!-- attitude reference generation model -->
        <define name="REF_OMEGA_P" value="450" unit="deg/s"/>
        <define name="REF_ZETA_P" value="0.9"/>
        <define name="REF_MAX_P" value="600." unit="deg/s"/>
        <define name="REF_MAX_PDOT" value="RadOfDeg(8000.)"/>

        <define name="REF_OMEGA_Q" value="450" unit="deg/s"/>
        <define name="REF_ZETA_Q" value="0.9"/>
        <define name="REF_MAX_Q" value="600." unit="deg/s"/>
        <define name="REF_MAX_QDOT" value="RadOfDeg(8000.)"/>

        <define name="REF_OMEGA_R" value="450" unit="deg/s"/>
        <define name="REF_ZETA_R" value="0.9"/>
        <define name="REF_MAX_R" value="600." unit="deg/s"/>
        <define name="REF_MAX_RDOT" value="RadOfDeg(8000.)"/>

        <!-- feedback -->
        <define name="PHI_PGAIN" value="850"/>
        <define name="PHI_DGAIN" value="425"/>
        <define name="PHI_IGAIN" value="0"/>

        <define name="THETA_PGAIN" value="850"/>
        <define name="THETA_DGAIN" value="425"/>
        <define name="THETA_IGAIN" value="0"/>

        <define name="PSI_PGAIN" value="1000"/>
        <define name="PSI_DGAIN" value="700"/>
        <define name="PSI_IGAIN" value="0"/>

        <!-- feedforward -->
        <define name="PHI_DDGAIN" value="0"/>
        <define name="THETA_DDGAIN" value="0"/>
        <define name="PSI_DDGAIN" value="100"/>
    </section>

    <section name="STABILIZATION_ATTITUDE_INDI" prefix="STABILIZATION_INDI_">
        <!-- control effectiveness, can be obtained by switching on "adaptive" in the indi settings -->
        <define name="G1_P" value="0.100"/>
        <define name="G1_Q" value="0.050"/>
        <define name="G1_R" value="0.0010"/>
        <define name="G2_R" value="0.236"/>

        <!-- Here it is assumed that your removed the damping from your bebop2!
             The dampers do not really damp, but cause oscillation. By removing/
             fixing them, the bebop2 will fly much better-->
        <define name="FILTER_ROLL_RATE" value="FALSE"/>
        <define name="FILTER_PITCH_RATE" value="FALSE"/>
        <define name="FILTER_YAW_RATE" value="FALSE"/>

        <!-- reference acceleration for attitude control -->
        <define name="REF_ERR_P" value="600.0"/>
        <define name="REF_ERR_Q" value="600.0"/>
        <define name="REF_ERR_R" value="600.0"/>
        <define name="REF_RATE_P" value="28.0"/>
        <define name="REF_RATE_Q" value="28.0"/>
        <define name="REF_RATE_R" value="28.0"/>

        <!-- second order filter parameters -->
        <define name="FILT_CUTOFF" value="3.2"/>
        <define name="FILT_CUTOFF_R" value="3.2"/>

        <!-- first order actuator dynamics -->
        <define name="ACT_DYN_P" value="0.06"/>
        <define name="ACT_DYN_Q" value="0.06"/>
        <define name="ACT_DYN_R" value="0.06"/>

        <!-- Adaptive Learning Rate -->
        <define name="USE_ADAPTIVE" value="FALSE"/>
        <define name="ADAPTIVE_MU" value="0.0003"/>
    </section>

    <section name="GUIDANCE_V" prefix="GUIDANCE_V_">
        <define name="HOVER_KP" value="400"/>
        <define name="HOVER_KD" value="120"/>
        <define name="HOVER_KI" value="20"/>
        <!-- Nominal throttle: 0.56 without any load, 0.76 with mounts + upboard, 0.79 with powerbank setup -->
        <!-- 0.68 in Gazebo -->
        <define name="NOMINAL_HOVER_THROTTLE" value="0.56"/>
        <define name="ADAPT_THROTTLE_ENABLED" value="TRUE"/>
    </section>

    <!-- Tuned for Bebop 2 at 1 m and 3.5 m height -->
    <section name="GUIDANCE_H" prefix="GUIDANCE_H_">
        <define name="REF_MAX_SPEED" value="2" unit="m/s"/>
        <define name="MAX_BANK" value="35" unit="deg"/>
        <define name="PGAIN" value="230"/>
        <define name="DGAIN" value="160"/>
        <define name="IGAIN" value="10"/>
    </section>

    <section name="NAVIGATION" prefix="NAV_">
        <define name="CLIMB_VSPEED" value="1.0"/>
        <define name="DESCEND_VSPEED" value="-0.75"/>
    </section>

    <section name="SIMULATOR" prefix="NPS_">
        <define name="ACTUATOR_NAMES" value="nw_motor, ne_motor, se_motor, sw_motor" type="string[]"/>
        <define name="JSBSIM_MODEL" value="bebop" type="string"/>
        <define name="SENSORS_PARAMS" value="nps_sensors_params_default.h" type="string"/>

        <define name="GAZEBO_WORLD" value="cyberzoo_jesse.world" type="string"/>
    </section>
    <include href="conf/simulator/gazebo/airframes/bebop.xml"/>

    <section name="AUTOPILOT">
        <define name="MODE_STARTUP" value="AP_MODE_NAV"/>
        <define name="MODE_MANUAL" value="AP_MODE_ATTITUDE_Z_HOLD"/>
        <define name="MODE_AUTO1" value="AP_MODE_ATTITUDE_Z_HOLD"/>
        <define name="MODE_AUTO2" value="AP_MODE_NAV"/>

        <define name="NO_RC_THRUST_LIMIT" value="TRUE"/>
    </section>

    <section name="BAT">
        <define name="MILLIAMP_AT_FULL_THROTTLE" value="8700"/>
        <define name="CATASTROPHIC_BAT_LEVEL" value="9.9" unit="V"/>
        <define name="CRITIC_BAT_LEVEL" value="11.0" unit="V"/>
        <define name="LOW_BAT_LEVEL" value="11.1" unit="V"/>
        <define name="MAX_BAT_LEVEL" value="12.4" unit="V"/>
    </section>
</airframe>
